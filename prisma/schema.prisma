generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id    Int    @id @default(autoincrement())
    email String @unique
    notes Note[]
}

model Note {
    id        Int      @id @default(autoincrement())
    userid    Int
    author    User     @relation(fields: [userid], references: [id])
    title     String
    content   String
    updatedAt DateTime @default(now()) @updatedAt

    @@index([userid])
}
